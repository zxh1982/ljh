<%- include('head'); -%>
<style type="text/css">
    #input{
        margin: 50px 50px;
    }
</style>


<%- include('contract'); -%>

<div>
    <button class="btn btn-primary btn-lg">
        打印合同
    </button>

    <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
        创建会员
    </button>
</div>


<div class="modal fade" id="myModal" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"
                        aria-hidden="true">×
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    创建会员
                </h4>
            </div>
            <div class="modal-body">

                <form id="newMember" action="enterInput" method="POST">
                    <div class="form-group">
                        <label>请刷卡</label>
                        <input class="form-control" type="text" id="memberNum" name="memberNum">
                    </div>

                    <div class="form-group">
                        <label>合同号</label>
                        <input class="form-control" type="text" id="contractNum" name="contractNum">
                    </div>

                    <div class="form-group">
                        <label>收据号</label>
                        <input class="form-control" type="text" id="receiptNum" name="receiptNum">
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    关闭
                </button>
                <button id="submit" type="button" class="btn btn-primary">
                    提交
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<script>

    $("#submit").click(function() {
        var memberNum = $("#memberNum").val();
        if (memberNum) {
            $('#newMember').submit();
        }
    });

    $("#memberNum").keyup(function(event) {
        if (event.keyCode === 13) {
            $("#submit").click();
        }
    })
</script>

<%- include('footer'); -%>
